# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}
order += "cpu_usage"
order += "load"
order += "memory"
# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "tztime date"
order += "tztime time"

cpu_usage {
    format = " %usage"
}

load {
        format = " %1min"
}

memory {
        format = " %used"
        threshold_degraded = "1G"
}

wireless _first_ {
        format_up = " %essid%quality"
        format_down = "down"
}

ethernet _first_ {
        format_up = " %speed"
        format_down = " down"
}

volume master {
    format = "♪ %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

battery all {
        format = " %percentage"
}

tztime date {
    format = " %d/%m/%Y"
}

tztime time {
    format = " %Hh%M"
}

